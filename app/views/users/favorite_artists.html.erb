<div id="wrapper">
    <%= render 'layouts/user-nav' %>
</div>
<%= render 'layouts/top-nav' %>
<div class="jumbotron background-image1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 user-edit-index">
                <div class="col-lg-12 favorite-artist-user">                    
                    <div class="col-lg-10 afrojack">
                        <h2 class="text-center"><%= @user.name %>のお気に入りアーティスト<i class="fab fa-the-red-yeti"></i></h2>
                    </div>
                    <div class="col-lg-2">
                        <div class="artist2">
                            <%= attachment_image_tag  @user, :profile_image, :fill, 125, 125, format: 'jpeg',fallback: 'no_image.png', size: "125x125", class: 'user-image' %>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <% @favoriteartist.each do |artist| %> 
                        <div class="col-lg-12">
                            <div class="col-lg-10 xxxtentaicion">                                                               
                                <div class="col-lg-8 artist-name">
                                    <span data-turbolinks="false">      
                                        <%= link_to "/artists/#{artist.artist.id}" do %>
                                            <h1 class="text-center"> <%= artist.artist.name %><i class="fab fa-earlybirds"></i></h1>
                                        <% end %>
                                    </span>
                                </div>                                                              
                                <div class="col-lg-4">
                                    <span data-turbolinks="false">
                                        <%= link_to "/artists/#{artist.artist.id}" do %>
                                            <div class="artist1">
                                                <%= image_tag artist.artist.image.variant(combine_options:{resize:"175x175^",crop:"175x175+0+0",gravity: :center}).processed %> 
                                            </div>
                                        <% end %>
                                    </span>
                                </div>                                                               
                            </div>
                        </div>
                        <% artist.artist.fes_artists[0..5].each do |festival| %>
                            <div class="col-lg-2  product-index">
                                <% if festival.festival.images.attached? %>
                                    <div class="slider1">
                                        <% festival.festival.images.each do |image| %> 
                                            <div class="festival">
                                                <%= image_tag image.variant(combine_options:{resize:"300x300^",crop:"300x300+0+0",gravity: :center}).processed %>
                                            </div>
                                        <% end %>
                                    </div>
                                <% end %>
                                <%= link_to "/festivals/#{festival.festival.id}" do %>
                                    <div class="col-lg-12">
                                        <p class="text-center"><%= festival.festival.name %></p>
                                    </div>
                                    <div class="col-lg-12">
                                        <p class="text-center"><i class="fas fa-globe"></i><%= festival.festival.adress %></p>
                                    </div>
                                <% end %>                              
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
