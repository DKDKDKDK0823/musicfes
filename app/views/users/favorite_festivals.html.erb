<div id="wrapper">
    <%= render 'layouts/user-nav' %>
</div>
<%= render 'layouts/top-nav' %>
<div class="contatiner">
    <div class="row">
		<div class="col-xs-6 col-lg-offset-3">
			<table class="table">
				<tbody>
						<td><%= attachment_image_tag  @user, :profile_image, :fill, 150, 150, format: 'jpeg',fallback: 'no_image.png', size: "150x150", class: 'user-image' %></td>
						<td><%= @user.name %>のいいね一覧</td>
						<td></td>
					</tr>
				</tbody>
			</table>
			<div class="col-lg-12">
				 <% @favoritefestivals.each do |festival| %> 
				<div class="col-lg-2">
					<div class="row">
							<%= link_to "/festivals/#{festival.festival.id}" do %>
								<% if festival.festival.images.attached? %>
								<div class="slider1">
								<% festival.festival.images.each do |image| %> 
									<div><%= image_tag image.variant(combine_options:{resize:"300x300^",crop:"300x300+0+0",gravity: :center, border:'2', bordercolor:'#00CCCC'}).processed %></div>
								<% end %> 
								<%= festival.festival.name %>
								</div>
								<% end %>
							<% end %>
					</div>
				</div>
				<% end %>
			</div>			
		</div>
    </div>

</div>