<div id="wrapper">
    <%= render 'layouts/user-nav' %>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <%= attachment_image_tag  @user, :profile_image, :fill, 150, 150, format: 'jpeg',fallback: 'no_image.png', size: "150x150", class: 'user-image' %>
            <%= @user.name %>のいいね一覧
            <div class="row">
                <div class="col-lg-10">
                <% @favoritefestivals.each do |festival| %>
                    <% if festival.images.attached? %>                 
                        <% festival.images.each do |image| %>
                            <%= image_tag image.variant(combine_options:{resize:"200x200^",crop:"200x200+0+0",gravity: :center, border:'5',bordercolor:'#00CCCC'}).processed %>
                        <% end %>                 
                    <% end %> 
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>



