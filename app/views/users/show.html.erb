<div id="wrapper">
    <%= render 'layouts/user-nav' %>
</div>

<div class="contatiner">
    <div class="row">
		<div class="col-xs-6 col-lg-offset-3">
			<table class="table">
				<tbody>
						<td>ユーザー名</td>
						<td><%= @user.name %></td>
						<td></td>
					</tr>
                     <tr>
						<td>自己紹介文</td>
						<td><%= @user.introduction %></td>
						<td></td>
					</tr>
                    <tr>
						<td>プロフ画像</td>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.png", size: "100x100", class: 'user-image' %></td>
						<td></td>
					</tr>
 
                    <tr>
                        <td><%= link_to "編集", "/users/#{@user.id}/edit", class: "btn-flat-border" %>
                    </tr>
				</tbody>
			</table>
			<div class="col-lg-12">
				<% @userfestivals.each do |festival| %>
				<div class="col-lg-2">
					<div class="row">
                   	<%= link_to "/festivals/#{festival.id}" do %>
                        <% if festival.images.attached? %>
                        <% festival.images.each do |image| %> 
                            <%= image_tag image.variant(combine_options:{resize:"300x300^",crop:"300x300+0+0",gravity: :center, border:'2', bordercolor:'#00CCCC'}).processed %>
                        <% end %> 
                        <% end %>
                    <% end %>

					</div>
				</div>
				<% end %>
			</div>			
		</div>
    </div>

</div>