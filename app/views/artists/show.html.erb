<div class="wrap">
    <div id="wrapper">
        <%= render 'layouts/user-nav' %>
    </div>
    <%= render 'layouts/top-nav' %>
    <div class="jumbotron background-image1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 artist-index-show">
                    <div class="col-lg-12 artist-name-show">
                        <div class="col-lg-10 col-lg-offset-1 artist">
                            <% if @artist.image.attached? %>
                                <div class="col-lg-7 judo">
                                    <h2 class="text-center"><%= @artist.name %>の出演フェス<i class="fab fa-jenkins"></i></h2>
                                </div>
                                <div class="col-lg-4">
                                    <div class="col text-left">
                                        <%= image_tag @artist.image.variant(combine_options:{resize:"200x200^",crop:"200x200+0+0",gravity: :center}).processed %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <% @artistfestivals.each do |fsetival| %>
                            <div class="col-lg-3">
                                <div class="col-lg-12">
                                    <%= link_to "/festivals/#{fsetival.festival.id}" do %>
                                        <p class="text-center"><%= fsetival.festival.name %></p>
                                    <% end %>
                                </div>
                                <div class="col-lg-12 artist-image">
                                    <div class="col text-center">
                                        <% if fsetival.festival.images.attached? %>
                                            <div class="slider3">
                                                <% fsetival.festival.images.each do |image| %>
                                                    <div class="festival">
                                                        <%= image_tag image.variant(combine_options:{resize:"150x150^",crop:"150x150+0+0",gravity: :center}).processed %>
                                                    </div>
                                                <% end %>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <%= link_to "/festivals/#{fsetival.festival.id}" do %>
                                        <p class="text-center"><%= fsetival.festival.adress %></p>
                                    <% end %>
                                </div>                          
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
Pace.on('done', function(){
    $('.wrap').fadeIn();
        $('.slider3').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        infinite: true,
        arrows: true,
        dots: true,
        arrows: false,
      });
});
</script>