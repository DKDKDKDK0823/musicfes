<div class="wrap">
    <div id="wrapper">
        <%= render 'layouts/user-nav' %>
    </div>
    <%= render 'layouts/top-nav' %>
    <div class="jumbotron background-image1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 artist-index-show">
                    <div class="col-lg-10 col-lg-offset-2 artist-new-box">
                        <%= form_with model: @artist, local: true  do |f| %>
                            <div class="col-lg-5">
                                <%= f.file_field :image, class: "form-control" %>
                            </div>
                            <div class="col-lg-5">
                                <%= f.text_field :name, class: "form-control" %>
                            </div>
                            <div class="col-lg-6 col-lg-offset-2">
                                <div class="artist-new-btn　">
                                    <%= f.submit '登録',  class: "btn btn-primary sign-in-button" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="col-lg-12">
                        <% @artists.each do |f| %>
                            <div class="col-lg-3">
                                <div class="col-lg-12">
                                    <% if f.image.attached? %>
                                        <div class="artist-new">
                                            <%= image_tag f.image.variant(combine_options:{resize:"150x150^",crop:"150x150+0+0",gravity: :center}).processed %>
                                        </div>
                                    <% end %>
                                </div>
                                <div class="col-lg-12">
                                    <p class="text-center"><%= f.name %></p>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
