<div id="wrapper">
    <%= render 'layouts/user-nav' %>
</div>
<%= render 'layouts/top-nav' %>
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-2">
            <div class="row">
                <%= form_with model: @artist, local: true  do |f| %>
                <div class="col-lg-5">
                    <%= f.file_field :image, class: "form-control" %>
                </div>
                <div class="col-lg-5">
                    <%= f.text_field :name, class: "form-control" %>
                    <%= f.submit '登録',  class: "btn-flat-border" %>
                </div>
                <% end %>
            </div>      
        </div>
        <div class="col-lg-12 artist-index">
            <% @artists.each do |f| %>
                <div class="col-xs-2">
                    <div class="row">
                        <% if f.image.attached? %>
                            <div class="artist">
                                <%= image_tag f.image.variant(combine_options:{resize:"100x100^",crop:"100x100+0+0",gravity: :center}).processed %> <br>
                            </div>
                        <% end %>
                        <%= f.name %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
